# Environment Configuration Template
# Copy this file to .env.development and .env.production and fill in your values

# API Base URL
VITE_API_BASE_URL=http://localhost:3000

# Discord OAuth Configuration
# Get the Client ID from https://discord.com/developers/applications
# Note: Client Secret should be configured on the backend, not exposed to the frontend
# 1. Create a new application at https://discord.com/developers/applications
# 2. Go to OAuth2 settings
# 3. Add redirect URI (e.g., http://localhost:5173/auth/discord/callback for dev)
# 4. Copy the Client ID (Client Secret goes on the backend)
VITE_DISCORD_CLIENT_ID=your_discord_client_id_here

# Frontend Logging Configuration
# These settings control how frontend logs are collected and sent to the backend

# Log endpoint (backend should forward to Loki)
VITE_LOG_ENDPOINT=/api/logs

# Minimum log level to capture (debug, info, warn, error)
# Use 'debug' for development, 'info' or 'warn' for production
VITE_LOG_LEVEL=info

# Number of logs to batch before sending (default: 10)
VITE_LOG_BATCH_SIZE=10

# Maximum time (ms) between log sends (default: 5000ms = 5s)
VITE_LOG_BATCH_INTERVAL=5000

# Sampling rate for debug logs in production (0.0 to 1.0, default: 0.1 = 10%)
# Helps reduce volume of debug logs in production
VITE_LOG_DEBUG_SAMPLE_RATE=0.1

# Maximum number of logs to buffer when offline (default: 100)
VITE_LOG_MAX_BUFFER_SIZE=100

# Enable/disable logging (default: true)
# Set to 'false' to completely disable frontend logging
VITE_LOG_ENABLED=true
